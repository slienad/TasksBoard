<h1>Listing reminders</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Due</th>
      <th>Issued</th>
      <th>Updated</th>
      <th>Status</th>
      <th>Priority</th>
      <th>Issuer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.name %></td>
        <td><%= reminder.description %></td>
        <td><%= reminder.due %></td>
        <td><%= reminder.issued %></td>
        <td><%= reminder.updated %></td>
        <td><%= reminder.status %></td>
        <td><%= reminder.priority %></td>
        <td><%= reminder.issuer %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

